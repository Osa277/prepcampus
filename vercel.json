{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { "projectSettings": { "outputDirectory": "frontend" } }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@next_public_api_url",
    "NEXT_PUBLIC_BASE_URL": "@next_public_base_url"
  },
  "functions": {
    "frontend/**": {
      "maxDuration": 30
    }
  }
}
